# Description: An essential exemplary set of plugins for gstreamer.
# URL: https://gstreamer.freedesktop.org/modules/gst-plugins-base.html
# Maintainer: Danny Rawlins, crux at romster dot me
# Depends on: alsa-lib cdparanoia gstreamer libgudev libjpeg-turbo libtheora libvisual mesa3d opus orc pango util-linux

name=gst-plugins-base
version=1.15.2
release=1
source=(https://gstreamer.freedesktop.org/src/$name/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-debug \
		--disable-nls \
		--disable-dependency-tracking \
		--disable-valgrind \
		--disable-examples \
		--disable-gtk-doc-html

	# fight unused direct deps
	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

	make
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/gtk-doc
}
